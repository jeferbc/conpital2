<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto my-5">

      <div class="text-center">
        <%= form_for @expense do |f| %>
          <div class="form-group">
            <%= f.collection_select(:transaction_type_id, TransactionType.all, :id, :name, {}, class: " form-control") %>
          </div>
          <div class="form-group">
            <%= f.date_field :date, class: 'form-control', placeholder: 'Date' %>
          </div>
          <div class="form-group">
            <%= f.text_field :concept, class: 'form-control', placeholder: 'Concept' %>
          </div>
          <div class="form-group">
            <%= f.collection_select(:category_id, Category.all, :id, :name, {}, class: " form-control") %>
          </div>
          <div class="form-group">
            <%= f.number_field :amount, class: 'form-control', placeholder: 'Amount' %>
          </div>
          <div>
            <%= f.submit "Edit Expense", class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>