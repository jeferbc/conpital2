<%= form_for @expense do |f| %>
  <div class="form-group">
    <%= f.select_field :transaction_type, class: 'form-control', placeholder: 'Type' %>
  </div>
  <div class="form-group">
    <%= f.date_field :date, class: 'form-control form-control-lg', placeholder: 'Date' %>
  </div>
  <div class="form-group">
    <%= f.text_field :concept, placeholder: 'Concept' %>
  </div>
  <div class="form-group">
    <%= f.select_field :category, class: 'form-control', placeholder: 'Category' %>
  </div>
  <div class="form-group">
    <%= f.number_field :amount, class: 'form-control', placeholder: 'Amount' %>
  </div>
  <div>
    <%= f.submit form_title, class: 'btn btn-primary btn-block' %>
  </div>
<% end %>